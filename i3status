general {
    color_good = "#859900"
    color_degraded = "#b58900"
    color_bad = "#dc322f"
}

order += "cpu_usage"
order += "load"
order += "battery 0"
order += "tztime local"

cpu_usage {
    format = "CPU %usage"
}

load {
    format = "L: %1min %5min %15min"
    max_threshold = "5"
}

battery 0 {
    format = "%status %remaining"
    low_threshold = 30
}

tztime local {
    format = "%Y-%m-%d %H:%M:%S"
}
